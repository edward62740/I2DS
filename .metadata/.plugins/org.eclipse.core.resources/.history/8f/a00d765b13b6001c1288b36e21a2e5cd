#define IPC_RX_MAX_SIZE  30
#define IPC_TX_MAX_SIZE  255



typedef struct {
  uint8_t rxBuffer[IPC_RX_MAX_SIZE];
  uint8_t txBuffer[IPC_TX_MAX_SIZE];
  uint32_t rxPos;
  uint32_t txPos;
} IPCData;
extern volatile IPCData ipc;
